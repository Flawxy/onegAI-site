{% for label, messages in app.flashes %}
    <div class="alertFlash alert alert-{{ label }} alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Fermer">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Fermer</span>
        </button>
        <div class="d-flex flex-row align-items-center justify-content-center clearfix">
            {% include 'partials/_flashIcons.html.twig' %}
            {% for message in messages %}
                <p class="text-center align-content-center">{{ message | raw }}</p>
            {% endfor %}
            {% include 'partials/_flashIcons.html.twig' %}
        </div>
    </div>
{% endfor %}

