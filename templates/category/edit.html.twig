{% extends 'base.html.twig' %}

{% block title %}Création d'une nouvelle catégorie{% endblock %}

{% block body %}
    <div class="container">

        <h1>Modifier la catégorie "{{ category.name }}".</h1>

        {{ form_start(catForm) }}

        {{ form_widget(catForm) }}
        <p class="text-right text-danger">NB : La catégorie ne sera pas affichée dans la documentation
            tant qu'elle ne possèdera pas au moins une entrée !</p>

        <button type="submit" class="btn btn-primary adminButton rounded-pill">
            Modifier la catégorie
        </button>
        <div class="text-right">
            <a href="{{ path('cat_delete', {'id': category.id}) }}" class=" btn btn-danger adminButton rounded-pill"
               onclick="return confirm(`Êtes-vous sûr de vouloir supprimer la catégorie {{ category.name }} ?`)">Supprimer la catégorie</a>
        </div>
        {{ form_end(catForm) }}

    </div>
{% endblock %}