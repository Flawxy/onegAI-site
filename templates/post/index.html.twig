{% extends 'base.html.twig' %}

{% block title %}Articles & Changelogs{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">
        Articles et Changelogs :
    </h1>
    <div class="row">
        {% for post in posts %}
            {% set url = path('posts_show', {'slug': post.slug}) %}
        <div class="col-md-4">
            <div class="card bg-secondary mb-3">
                <div class="card-header text-center">
                    Post√© le <small>{{ post.createdAt | date("d/m/Y") }}</small>
                </div>
                <a href="{{ url }}">
                    <img src="{{ post.image }}" alt="Image de l'article"
                         style="height: 200px; width: 100%; display: block">
                </a>
                <div class="card-body">
                    <a href="{{ url }}">
                        <h4 class="card-title">
                            {{ post.title }}
                        </h4>
                    </a>
                    <p class="card-text">
                        {{ post.introduction }}
                    </p>
                    <a href="{{ url }}" class="btn btn-info">En savoir plus !</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
