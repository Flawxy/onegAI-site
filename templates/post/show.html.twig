{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="post-title" style="background-image: url({{ post.image }}">
    <div class="container">
        <h1>{{ post.title }} </h1>
        <p><small>Posté le {{ post.createdAt | date("d/m/Y") }}</small></p>
        <p>{{ post.introduction }}</p>
        {% if app.user %}
            <a href="{{ path('posts_edit', {'slug': post.slug}) }}" class="btn btn-info adminButton rounded-pill">Modifier l'article</a>
            <a href="{{ path('posts_delete', {'slug': post.slug}) }}" class="btn btn-danger adminButton rounded-pill"
               onclick="return confirm(`Êtes-vous sûr de vouloir supprimer l'article {{ post.title }} ?`)">Supprimer l'article</a>
        {% endif %}
    </div>
</div>
    <div class="container articleContent">
    <div class="row">
        <div class="col">
            {{ post.content | raw }}
        </div>
    </div>
</div>
{% endblock %}